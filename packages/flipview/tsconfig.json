{
  "compilerOptions": {
    "module": "es6",
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "declarationDir": "./types", 
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "./dist", "./types"]
}
